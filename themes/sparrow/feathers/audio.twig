{% extends "content/post.twig" %}

{% block content %}
{% if post.title is not empty %}
<h2 class="post_title">
<a href="{{ post.url() }}" rel="bookmark" title="{{ 'Permanent link to &#8220;%s&#8221;' | translate | format(post.title | striptags | fix(true)) }}">{{ post.title }}</a>
</h2>
{% endif %}
<section class="description{{ post.description | length > 1000 ? ' longform' : '' }}">
{{ post.description }}
</section>
<section class="audio">
{{ post.audio_player }}
</section>
{% endblock %}
