{% extends "content/post.twig" %}

{% block content %}
      {% if post['title'] %}
      <h2 class="post_title">
        <a href="$post.url" rel="bookmark" title="${ "Permanent link to" | translate } &quot;${ post.title | escape(true) }&quot;">$post.title</a>
        <h6 class="post_byline">${ "Written by %s" | translate | format(post.author.name) }</h6>
      </h2>
      {% endif %}
      <section class="quote{% if post.quote | length > 1000 %} columnized{% endif %}">
  	    <blockquote>
  	      ${ post.quote | read_more("â€¦more") }
  	    </blockquote>
  	    <p>${ ("&mdash; " ~ post.source_unfiltered) | markup_post_text(post) | markup_text(post) | read_more }</p>
      </section>
{% endblock %}
