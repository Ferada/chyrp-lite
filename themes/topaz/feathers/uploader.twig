{% extends "content/post.twig" %}

{% block content %}
      {% if post['title'] %}
      <h2 class="post_title">
        <a href="$post.url" rel="bookmark" title="${ "Permanent link to" | translate } &quot;${ post.title | strip_tags | escape(true) }&quot;">$post.title</a>
        <h6 class="post_byline">${ "Written by %s" | translate | format(post.author.name) }</h6>
      </h2>
      {% endif %}
      <section class="caption{% if post.caption | length > 1000 %} columnized{% endif %}">
        ${ post.caption | read_more("…more") }
      </section>
      {% for file in post.files %}
        {% if "jpg jpeg png gif tif tiff bmp" | contains(file.type) %}
      <section class="photo">
        ${ feathers['uploader'].image_link(file.name, 1024, 2048, "quality=80", "80vw") }
      </section>
        {% else %}
      <section class="attachment">
        ${ "File attachment:" | translate }
        <a href="${ file.link | escape }">&quot;${ file.name | escape | truncate(40, "…", true) }&quot;</a>
      </section>
        {% endif %}
      {% endfor %}
{% endblock %}
