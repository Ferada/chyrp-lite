{% extends "content/post.twig" %}

{% block content %}
      {% if post['title'] %}
      <h2 class="post_title">
        <a href="$post.url" rel="bookmark" title="${ "Permanent link to" | translate } &quot;${ post.title | escape(true) }&quot;">$post.title</a>
      </h2>
      <h6 class="post_byline">${ "Written by %s" | translate | format(post.author.name) }</h6>
      {% endif %}
      <section class="description{% if post.description | length > 1000 %} columnized{% endif %}">
        ${ post.description | read_more("â€¦more") }
      </section>
      <section class="video">
      	$post.video_player
      </section>
{% endblock %}
