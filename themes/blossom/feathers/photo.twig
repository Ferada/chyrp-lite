{% extends "content/post.twig" %}

{% block content %}
      {% if post['title'] %}
      <h2>
        <a href="$post.url" rel="bookmark" title="${ "Permanent link to" | translate } &quot;$post.title&quot;">$post.title</a>
      </h2>
      {% endif %}
      <div class="photo_frame">
        ${ feathers['photo'].image_link(post, 1200, null, "quality=80") }
      </div>
      {% if post.caption %}
      <section class="caption{% if post.caption | length > 1000 %} columnized{% endif %}">
        ${ post.caption | read_more("â€¦more") }
      </section>
      {% endif %}
{% endblock %}
