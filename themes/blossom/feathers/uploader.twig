{% extends "content/post.twig" %}

{% block content %}
      {% if post['title'] %}
      <h2>
        <a href="$post.url" rel="bookmark" title="${ "Permanent link to" | translate } &quot;$post.title&quot;">$post.title</a>
      </h2>
      {% endif %}
      <section{% if post.caption | length > 1000 %} class="columnized"{% endif %}>
        ${ post.caption | read_more("…more") }
        <div class="doaction downloads">
        {% for file in post.files %}
          <a href="${ file.link | escape }">${ "Download" | translate } &quot;${ file.name | escape | truncate(20, "…", true) }&quot;</a>
        {% endfor %}
        </div>
      </section>
{% endblock %}
