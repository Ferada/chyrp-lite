{% extends "content/post.twig" %}

{% block content %}
      {% if post['title'] %}
      <h2>
        <a href="$post.url" rel="bookmark" title="${ "Permanent link to" | translate } &quot;$post.title&quot;">$post.title</a>
      </h2>
      {% endif %}
      <section{% if post.caption | length > 1000 %} class="columnized"{% endif %}>
        ${ post.caption | read_more("â€¦more") }
        <div class="doaction admin">
			<a href="${ post.link | escape }">Download &quot;${ post.filename | escape }&quot;</a>
        </div>
      </section>
{% endblock %}
