{% extends "layout.twig" %}

{% block title %}${ "Manage Tags" | translate("tags") }{% endblock %}

{% block content %}
        <h2>${ "Manage Tags" | translate("tags") }</h2>
        <table>
            <thead> 
                <tr class="head">
                    <th class="tag_name">${ "Name" | translate("tags") }</th>
                    <th class="tag_count">${ "Posts Tagged" | translate("tags") }</th>
                    <th class="controls" colspan="2">${ "Controls" | translate }</th>
                </tr>   
            </thead>
            <tbody> 
                {% for tag in tag_cloud %}
                <tr>
                    <td class="tag_name main">
                        <a class="tag" href="index.php?action=$route.action&amp;query=${ tag.clean | escape }">$tag.name</a>
                    </td>
                    <td class="tag_count">
                        $tag.popularity
                    </td>
                    <td class="controls">
                        <a class="edit_tag" href="{% admin "rename_tag&name="~ tag.clean %}"><img src="$theme_url/images/icons/edit.svg" alt="${ "edit" | translate }"></a>
                    </td>
                    <td class="controls">
                        <a class="delete_tag" href="{% admin "delete_tag&name="~ (tag.name | urlencode) ~"&clean="~ tag.clean %}"><img src="$theme_url/images/icons/delete.svg" alt="${ "delete" | translate }"></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="100%"><span class="sub">${ "(none)" | translate }</span></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <h2>{% if GET.query %}${ "Search Results" | translate }{% else %}${ "Last 25 Posts" | translate }{% endif %}</h2>
            <form action="{% admin "bulk_tag" %}" method="post">
                <table>
                    <thead>
                        <tr class="head">
                            <th class="toggler"></th>
                            <th class="post_title">${ "Post" | translate }</th>
                            <th class="post_tags">${ "Tags" | translate("tags") }</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts.paginated %}
                        <tr class="post">
                            <td class="checkbox">
                                <input type="checkbox" name="post[$loop.index0]" value="$post.id" id="post_checkbox_$post.id">
                            </td>
                            <td class="post_title">
                                <a class="edit_tag" href="{% admin "edit_tags&id="~ post.id %}">${ post.title | truncate(30, "â€¦", true) }</a>
                            </td>
                            <td class="post_tags main">
                            {% for name, clean in post.tags | items %}
                                <a class="tag" href="index.php?action=$route.action&amp;query=${ clean | escape }">$name</a>
                            {% endfor %}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="100%"><span class="sub">${ "(none)" | translate }</span></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="controls">
                    <h4>${ "Tag Selected Post(s) with:" | translate("tags") }</h4>
                    <input type="text" name="name" value="" id="name">
                    <button type="submit">${ "Tag" | translate("tags") }</button>
                    <input type="hidden" name="hash" value="$site.secure_hashkey" id="hash">
                </div>
            </form>
            {% if posts.paginated and posts.pages > 1 %}
            <div class="pagination">
                $posts.prev_link
                <span class="pages">${ "Page %d of %d" | translate | format(posts.page, posts.pages) }</span>
                $posts.next_link
            </div>
            {% endif %}
{% endblock %}
