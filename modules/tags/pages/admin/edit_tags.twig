{% extends "layout.twig" %}

{% block title %}${ "Edit Tags - %s" | translate("tags") | format(post.title) }{% endblock %}

{% block content %}
            <h2>${ "Edit Tags for &#8220;%s&#8221;" | translate("tags") | format(post.title) }</h2>
            <form class="detail" action="{% admin "update_tags" %}" method="post" accept-charset="utf-8">
                <fieldset>
                    <p>
                        <input type="text" name="tags" value="${ post.tags | keys | join(", ") | escape }" id="tags" class="big expand">
                        <button class="yay" name="delete">
                            <img src="$theme_url/images/icons/success.svg" alt="delete"> ${ "Update" | translate }
                        </button>
                    </p>
                    <input type="hidden" name="hash" value="$site.secure_hashkey" id="hash">
                    <input type="hidden" name="id" value="$post.id" id="clean">
                </fieldset>
            </form>
{% endblock %}
