{% extends "layouts" ~ DIR ~ "default.twig" %}

{% block title %}{{ "Edit Pingback" | translate("pingable") }}{% endblock %}

{% block content %}
<h2>{{ "Editing Pingback to &#8220;%s&#8221;" | translate("pingable") | format(pingback.post.title() | striptags | oneof("[Untitled]" | translate)) }}</h2>
<form id="edit_pingback" class="split" action="{{ url('update_pingback') }}" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
<fieldset>
<p>
<label for="title">{{ "Title" | translate("pingable") }}</label>
<input class="text" type="text" name="title" value="{{ pingback.title | fix(true, true) }}" id="title">
</p>
<p class="buttons">
<button type="submit" class="yay"><img src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="icon">{{ "Update" | translate("pingable") }}</button>
</p>
<input type="hidden" name="id" value="{{ pingback.id }}" id="id">
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
</fieldset>
</form>
{% endblock %}
